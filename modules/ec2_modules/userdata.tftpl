!/bin/bash
instance_index=$(curl -s http://169.254.169.254/latest/meta-data/instance-id | cut -d'-' -f2)
hostnamectl set-hostname isenode${instance_index}
dnsdomain=${dns_domain}
primarynameserver=169.254.169.253
ntpserver=169.254.169.123
username=iseadmin
password=${password}
timezone=${time_zone}
ersapi=${ers_api}
openapi=${open_api}
pxGrid=${px_grid}
pxgrid_cloud=${px_grid_cloud}
